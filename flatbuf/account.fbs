include "key.fbs";
include "primitives.fbs";


namespace iroha.api;


table Account {
  pubKey: PublicKey (required);  // primary key for account
  alias:  string;
  assets: [Asset];
  
  // for m-n multisignature scheme
  // signatories.size() = n, useKeys = m
  signatories: [PublicKey];
  useKeys:     ushort = 1;

  permissions: [Permission]; 
}